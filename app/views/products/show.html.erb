<div class="page-header">
  <%= link_to (' <i class="fa fa-reply"></i>').html_safe, products_path, class: 'btn btn-default'  %>
    <%= link_to ('<i class="fa fa-pencil-square-o"></i>
').html_safe, edit_product_path(@product), class: 'btn btn-primary' %>
  <h1>Show product</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @product.name %></dd>

  <dt>Description:</dt>
  <dd><%= @product.description %></dd>

  <dt>Price:</dt>
  <dd><%= @product.price %></dd>
  <dt>Status:</dt>
  <dd><%= @product.status %></dd>
  <dt>Image:</dt>
  <dd><%= image_tag @product.image.url(:large) %></dd>


</dl>
